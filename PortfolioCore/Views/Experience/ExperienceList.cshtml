@model List<Experience>
@{
    ViewData["Title"] = "Experience Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2>Deneyim Listesi</h2>

<a href="/Experience/CreateExperience/" class="btn btn-primary mb-3">+ Yeni Deneyim Ekle</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Alt Başlık</th>
            <th>Açıklama</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.SubTitle</td>
                <td>@item.Description</td>
                <td>@item.ExperienceDate</td>
                <td>
                    <a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-sm btn-warning">Güncelle</a>
                </td>
                <td>
                    <a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-sm btn-danger" onclick="return confirm('Bu deneyimi silmek istediğinizden emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
