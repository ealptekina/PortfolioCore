@model Education
@{
    ViewData["Title"] = "CreateEducation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Eğitim Ekle</h1>

<form asp-action="CreateEducation" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Bölüm</label>
        <input asp-for="Title" class="form-control" style="border:1px solid black" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubTitle" class="control-label">Üniversite</label>
        <input asp-for="SubTitle" class="form-control" style="border:1px solid black" />
        <span asp-validation-for="SubTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control" style="border:1px solid black"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateInfo" class="control-label">Tarih Aralığı</label>
        <input asp-for="DateInfo" class="form-control" style="border:1px solid black" />
        <span asp-validation-for="DateInfo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="ExperienceList" class="btn btn-secondary">İptal</a>
</form>