@model Education
@{
    ViewData["Title"] = "UpdateEducation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Eğitim Güncelle</h1>


<form asp-action="UpdateEducation" method="post">
    <input type="hidden" asp-for="EducationId" />
    <div class="form-group">
        <label asp-for="Title" class="control-label">Bölüm</label>
        <input asp-for="Title" class="form-control" style="border:1px solid black" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubTitle" class="control-label">Üniversite</label>
        <input asp-for="SubTitle" class="form-control" style="border:1px solid black" />
        <span asp-validation-for="SubTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Açıklama</label>
        <input asp-for="Description" class="form-control" style="border:1px solid black" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateInfo" class="control-label">Tarih Aralığı</label>
        <input asp-for="DateInfo" class="form-control" style="border:1px solid black" />
        <span asp-validation-for="DateInfo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

