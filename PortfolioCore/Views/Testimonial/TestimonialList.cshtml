@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2>Referans Listesi</h2>

<a href="/Testimonial/CreateTestimonial/" class="btn btn-primary mb-3">+ Yeni Referans Ekle</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Ünvan</th>
            <th>Yorum</th>
            <th>Görsel</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.NameSurname</td>
                <td>@item.Title</td>
                <td>@item.CommentDetail</td>
                <td><img src="@item.ImageUrl" alt="Görsel" width="60" height="60" style="object-fit:cover;" /></td>
                <td>
                    <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-sm btn-warning">Güncelle</a>
                </td>
                <td>
                    <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-sm btn-danger" onclick="return confirm('Bu referansı silmek istediğinizden emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
