@model List<Portfolio>
@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Proje Listesi</h1>

<div class="mb-3">
    <a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni Portfolyo Ekle</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="@item.ImageUrl" class="card-img-top" alt="Portföy Görseli" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">
                        <strong>Açıklama:</strong> @item.Description<br />
                        <strong>Kategori:</strong> @item.Category.CategoryName<br />
                        <strong>Müşteri:</strong> @item.Client<br />
                        <strong>Proje Adı:</strong> @item.ProjectName<br />
                        <strong>Proje Tarihi:</strong> @item.ProjectDate<br />
                        <strong>Proje Url:</strong> <a href="@item.ProjectUrl" target="_blank">@item.ProjectUrl</a>
                    </p>
                    <div class="d-flex justify-content-between">
                        <a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-warning btn-sm">Güncelle</a>
                        <a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
