@model List<Contact>

@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2>İletişim Listesi</h2>

<a href="/Contact/CreateContact/" class="btn btn-primary mb-3">+ Yeni İletişim Ekle</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Adres</th>
            <th>Telefon Numarası</th>
            <th>E-Posta</th>
            <th>Lokasyon</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Address</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>@item.Location</td>
                <td>
                    <a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-sm btn-warning">Güncelle</a>
                </td>
                <td>
                    <a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-sm btn-danger" onclick="return confirm('Bu iletişim kaydını silmek istediğinizden emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
