@model List<Contact>

<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>İletişim</h2>
        <p>Projeleriniz, sorularınız ya da işbirliği talepleriniz için bizimle iletişime geçmekten çekinmeyin. Size yardımcı olmaktan memnuniyet duyarız.</p>
    </div>

    <div class="container" data-aos="fade" data-aos-delay="100">
        <div class="row gy-4">

            <div class="col-lg-4">
                @foreach (var item in Model)
                {
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                        <i class="bi bi-geo-alt flex-shrink-0"></i>
                        <div>
                            <h3>Adres</h3>
                            <p>@item.Address</p>
                        </div>
                    </div>

                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                        <i class="bi bi-telephone flex-shrink-0"></i>
                        <div>
                            <h3>Telefon</h3>
                            <p>@item.PhoneNumber</p>
                        </div>
                    </div>

                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-envelope flex-shrink-0"></i>
                        <div>
                            <h3>Mail</h3>
                            <p>@item.Email</p>
                        </div>
                    </div>
                }
            </div>

            @await Component.InvokeAsync("_DefaultMessageComponentPartial")

            <!-- Embed Harita (Google Maps) -->
            <div class="embed-map">
                <h3>Harita</h3>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3061.014378111933!2d32.84167261203848!3d39.896310371409356!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d34f7d6fd3e439%3A0x5bfbc518dde695b!2sDikmen%20Vadisi!5e0!3m2!1str!2str!4v1745531205496!5m2!1str!2str" width="100%"
                        height="450"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>

            </div>
        </div>
    </div>

</section>
