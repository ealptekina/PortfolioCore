@model List<Testimonial>

<section id="testimonials" class="testimonials section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Referanslarım</h2>
        <p>Çeşitli projelerde birlikte çalıştığım profesyoneller ve iş ortaklarım, çalışma prensiplerimi ve yetkinliklerimi en iyi şekilde yansıtan referanslarımı oluşturmaktadır.</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <!-- Swiper Container -->
        <div class="swiper-container">
            <!-- <-- Bu kısmı güncelledik -->
            <div class="swiper-wrapper">
                @foreach (var item in Model)
                {
                    <div class="swiper-slide">
                        <div class="testimonial-item">
                            <div class="row gy-4 justify-content-center">
                                <div class="col-lg-6">
                                    <div class="testimonial-content">
                                        <p>
                                            <i class="bi bi-quote quote-icon-left"></i>
                                            <span>@item.CommentDetail</span>
                                            <i class="bi bi-quote quote-icon-right"></i>
                                        </p>
                                        <h3>@item.NameSurname</h3>
                                        <h4>@item.Title</h4>
                                        <div class="stars">
                                            <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-2 text-center">
                                    <img src="@item.ImageUrl" class="img-fluid testimonial-img" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Swiper Pagination -->
            <div class="swiper-pagination"></div>
        </div>
    </div>
</section>

<!-- Swiper JS and Initialization -->
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>
    var swiper = new Swiper('.swiper-container', {
        loop: true,                // Döngüde çalışmasını sağlar
        speed: 600,                // Geçiş hızı
        autoplay: {
            delay: 5000            // Her slayttan sonra 5 saniye bekler
        },
        slidesPerView: 'auto',     // Slaytlar otomatik genişlikte
        pagination: {
            el: '.swiper-pagination',   // Sayfa numaraları
            type: 'bullets',            // Nokta göstergesi
            clickable: true            // Tıklanabilir olmasını sağlar
        }
    });
</script>
