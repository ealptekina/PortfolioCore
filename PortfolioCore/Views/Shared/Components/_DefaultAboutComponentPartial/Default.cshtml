@model List<About>

<section id="about" class="about section">
    @foreach (var item in Model)
    {
        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Hakkımda</h2>

            <p>@item.Description</p>
        </div><!-- End Section Title -->

        <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                    <img src="~/MyResume-1.0.0/assets/img/profile-img.jpg" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
                <h2>@item.Position</h2>
                <div class="row">
                    <div class="col-lg-12">
                        <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Doğum günü:</strong> <span>@item.Birthday</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Web Sitesi:</strong> <span>@item.Website</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@item.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@item.City</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@item.Age</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Derece:</strong> <span>@item.Degree</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Eposta:</strong> <span>@item.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@item.Freelance</span></li>
                            </ul>
                        </div>
                    </div>
                    <p class="py-3">
                        @item.SubDescription
                    </p>
               
            </div>
            
        </div>
        
    </div>
    }
</section>
