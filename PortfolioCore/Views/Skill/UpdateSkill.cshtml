@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yetenek Güncelle</h1>


<form asp-action="UpdateSkill" method="post">
    <input type="hidden" asp-for="SkillId" />
    <div class="form-group">
        <label asp-for="SkillName" class="control-label">Yetenek Adı</label>
        <input asp-for="SkillName" class="form-control" style="border:1px solid black" />
        <span asp-validation-for="SkillName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SkillValue" class="control-label">Yetenek Oranı</label>
        <input asp-for="SkillValue" class="form-control" style="border:1px solid black" />
        <span asp-validation-for="SkillValue" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>


